@model Webapplication.Models.Media

@{
	ViewData["Title"] = "Details";
}

<h1>Details</h1>
<div>
	<div class="hero-banner" style="backdrop-image: url@($"https://image.tmdb.org/t/p/w500{@Model.BackdropPath}")" alt="@Model.Title">
		<div class="overlay">
			<div class="backdrop-content">
				<hr />
				<dl class="row">
					<dd class="col-sm-10">
						@Html.DisplayFor(model => model.Title)
					</dd>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => model.OriginalTitle)
					</dd>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => model.Description)
					</dd>
					<dd class="col-sm-10">
						<img src="@($"https://image.tmdb.org/t/p/w500{@Model.PosterPath}")" alt="@Model.Title" />
					</dd>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => model.MediaType)
					</dd>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => model.Adult)
					</dd>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => model.OriginalLanguage)
					</dd>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => model.Popularity)
					</dd>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => model.ReleaseDate)
					</dd>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => model.Video)
					</dd>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => model.VoteAverage)
					</dd>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => model.VoteCount)
					</dd>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => model.Genre)
					</dd>
				</dl>
			</div>
		</div>
	</div>
</div>
<div>
	<a asp-action="Index">Back to List</a>
</div>
