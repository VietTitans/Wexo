@model IEnumerable<Webapplication.Models.Media>

@{
	ViewData["Title"] = "MoviesByGenreId";
}

<h1>Movies</h1>
<div class="movie-grid">
	@foreach (var movie in Model)
	{
		if (movie != null)
		{
			<div class="movie-card">
				<a asp-controller="Movie" asp-action="Details" asp-route-id="@movie.Id">
					<img src="@($"https://image.tmdb.org/t/p/w500{movie.PosterPath}")" alt="@movie.Title" class="movie-poster" />
				</a>
				<div class="movie-info">
					<h2 class="movie-title">@movie.Title</h2>
					<p class="movie-description">@movie.Description</p>
				</div>
			</div>
		}
	}
</div>